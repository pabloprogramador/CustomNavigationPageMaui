<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomNavigationPageMaui.Sample.Pages.MainPage"
             Title="MainPage">
    <Grid BackgroundColor="Orange">
        <VerticalStackLayout VerticalOptions="Center" Spacing="20" Margin="30">
            <Label 
            Text="CUSTOM NAVIGATON PAGE .NET MAUI!"
             FontSize="28"
                HorizontalTextAlignment="Center"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Label 
            Text="ANIMATIONS"
                HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Button Text="Fade / Fade" Clicked="FadeClicked" />
            <Button Text="Left / Right" Clicked="LeftClicked" />
            <Button Text="Top / Bottom" Clicked="TopClicked" />
            <Button Text="Flip" Clicked="FlipClicked" />
            <Button Text="Scale" Clicked="ScaleClicked" />
            <Button Text="None" Clicked="NoneClicked" />
            <Button Text="Default" Clicked="DefaultClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
