<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomNavigationPageMaui.Sample.Pages.MainPage"
             Title="MainPage">
    <Grid BackgroundColor="Orange">
        <VerticalStackLayout BackgroundColor="Yellow" VerticalOptions="Center" Spacing="20" Margin="30">
            <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Button Text="Page1 Fade / Fade" Clicked="FadeClicked" />
            <Button Text="Page2" />
            <Button Text="Page3" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
